{
    // Git
    "git.openRepositoryInParentFolders": "never",
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.blame.editorDecoration.enabled": false,


    // Editor & Explorer
    "window.zoomLevel": 1,
    "workbench.activityBar.location": "top",
    "workbench.iconTheme": "file-icons",
    "workbench.preferredDarkColorTheme": "Vesper",
    "debug.console.fontFamily": "JetBrainsMono Nerd Font, monospace",
    "debug.console.fontSize": 15,
    "editor.fontFamily": "JetBrainsMono Nerd Font, monospace",
    "editor.fontSize": 17,
    "editor.minimap.enabled": true,
    "editor.scrollbar.horizontal": "hidden",
    //"editor.scrollbar.vertical": "hidden",
    //"editor.scrollbar.verticalScrollbarSize": 0,
    "debug.openDebug": "neverOpen",
    "editor.fontWeight": "normal",
    "editor.fontVariations": true,
    "editor.fontLigatures": true,
    //"editor.rulers": [92, 120],
    "editor.cursorSmoothCaretAnimation": "off",
    "editor.folding": true,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "extensions.ignoreRecommendations": true,
    "window.commandCenter": false,
    "window.customTitleBarVisibility": "windowed",
    "telemetry.telemetryLevel": "off",
    "editor.cursorBlinking": "blink",
    "vim.highlightedyank.enable": true,


    // Exclude and Nesting
    "files.exclude": {
        ".godot": true,
        ".vscode": true,
        "**/*.import": true,
        "**/*.blend1": true,
        "**/*.aseprite": true,
        "**/*.ase": true,
    },
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": {
        "*.gd": "${capture}.tscn, ${capture}.gd.uid, ${capture}.gdshader, ${capture}.gdshader.uid, ${capture}.blend, ${capture}.tres, ${capture}.png",
        "*.gdshader": "${capture}.gdshader.uid",
        "*.tscn": "${capture}.png, ${capture}.blend, ${capture}.gdshader, ${capture}.gdshader.uid, ${capture}.tres,",
    },


    // Godot Setup
    "godotTools.editorPath.godot4": "/usr/bin/godot",
    "godotTools.inlayHints.gdscript": true,
    "godotTools.scenePreview.previewRelatedScenes": "anyFolder",
    "godotTools.documentation.pageScale": 200,


    // Copilot
    "github.copilot.selectedCompletionModel": "gpt-4o-copilot",
    "github.copilot.nextEditSuggestions.enabled": true,
    "chat.commandCenter.enabled": false,
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false,
        "gdscript": false
    },


    // Theme Setup
    "window.autoDetectColorScheme": true,


    // Theme Specific Overrides
    "workbench.colorCustomizations": {
        "[Kanagawa]": {
            // Editor Settings
            "editor.lineHighlightBackground": "#252735",
            "editor.background": "#1A1B25",

            // Primary Code Tabs
            "editorGroupHeader.tabsBorder": "#2D2D3A",
            "editorGroupHeader.tabsBackground": "#1A1B25",
            //"editorGroupHeader.border": "#2D2D3A",
            "tab.activeBackground": "#2D2D3A",
            "tab.unfocusedInactiveBackground": "#2D2D3A",
            "tab.selectedBackground": "#2D2D3A",
            "tab.hoverBackground": "#2D2D3A",
            "tab.inactiveBackground": "#1A1B25",
            "tab.unfocusedActiveBackground": "#2D2D3A",
            "tab.unfocusedHoverBackground": "#2D2D3A",
            "editorRuler.foreground": "#2D2D3A",
            //"tab.unfocusedInactiveBackground": "#001aff",
            //"tab.activeBorderTop": "#ff0000",

            // Bottom Header Panel
            "terminal.background": "#1A1B25",
            "panel.border": "#2D2D3A",
            "panelTitle.activeBorder": "#4F4F82",
            "debugConsole.infoForeground": "#b9b9b9",
            "debugConsole.warningForeground": "#737383",
            "statusBar.background": "#1A1B25",
            "statusBar.border": "#2D2D3A",
            "statusBar.debuggingBackground": "#4F4F82",
            //"panel.background": "#ff0000",

            // Side Bars
            "sideBar.background": "#1A1B25",
            "sideBar.border": "#2D2D3A",
            "sideBar.foreground": "#e2e2e2",
            "list.activeSelectionForeground": "#E6C283",
            "list.activeSelectionBackground": "#2D2D3A",
            "list.inactiveSelectionForeground": "#E6C283",
            "list.inactiveSelectionBackground": "#2D2D3A",

            // Title Bar
            "titleBar.activeBackground": "#1A1B25",
            "titleBar.inactiveBackground": "#17171F",
            "titleBar.border": "#2D2D3A",
            "titleBar.activeForeground": "#FFFFFF",
            "titleBar.inactiveForeground": "#FFFFFF",

            // Documentation Background
            "editorHoverWidget.background": "#17171f",
        }
    },
    "editor.tokenColorCustomizations": {
        "[Kanagawa]": {
            "textMateRules": [
                {
                    "name": "Constants and enums",
                    "scope": [
                        "variable.other.constant",
                        "variable.other.enummember"
                    ],
                    "settings": {
                        "foreground": "#f89860"
                    }
                },
                {
                    "name": "Keyword",
                    "scope": "keyword",
                    "settings": {
                        "foreground": "#957fb8"
                    }
                },
            ]
        }
    },
    "editor.accessibilitySupport": "off",
    "editor.tabSize": 4,
    "editor.mouseWheelScrollSensitivity": 2,

}